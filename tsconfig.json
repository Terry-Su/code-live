{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "es6",
		"target": "es5",
		"jsx": "react",
    "allowJs": true,
    "outDir": "../../build/",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2016"],
    "types": ["node", "webpack-env"],
    "typeRoots": [
      "src/typings/**/*"
    ]
  }
}
